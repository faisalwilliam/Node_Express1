      <form action="/user/edit/<%= obj._id %>?_method=PUT" method="POST" class="mx-0 row gx-3 my-4 mt-2">

        <div class="col-md-6">
          <label for="firstName" class="form-label">First name</label>
          <input type="text" class="form-control" name="firstName" id="firstName" value="<%= obj.firstName %>">

          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" name="email" id="email" value="<%= obj.email %>">
          <label for="age" class="form-label">Age</label>
          <input type="number" class="form-control" name="age" id="age" value="<%= obj.age %>">

          <div class="col-md-6 ">
            <label for="country" class="form-label">Country</label>
            <select name="country" id="country" class="form-select">
              <option disabled>Choose here...</option>
              <option <%= obj.country=='Sweadn' ? 'selected' : '' %>>Sweadn</option>
              <option <%= obj.country=='Denmark' ? 'selected' : '' %>>Denmark</option>
              <option <%= obj.country=='Norway' ? 'selected' : '' %>>Norway</option>
            </select>
          </div>
          <div class="col-md-6">
            <label for="gender" class="form-label">Gender</label>
            <select name="gender" id="gender" class="form-select">
              <option disabled>Choose here...</option>
              <option <%= obj.gender=='Male' ? 'selected' : '' %>>Male</option>
              <option <%= obj.gender=='Female' ? 'selected' : '' %>>Female</option>
              <option <%= obj.gender=='Other' ? 'selected' : '' %>>Other</option>
            </select>
          </div>
        </div>

        <div class="col-md-6">
          <label for="lastName" class="form-label">Last name</label>
          <input type="text" class="form-control" name="lastName" id="lastName" value="<%= obj.lastName %>">
          <label for="phoneNumber" class="form-label">Telephone</label>
          <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" value="<%= obj.phoneNumber %>">
        </div>

        <div class="col-12">
          <div class="col-12">
            <button type="submit" class="btn btn-primary my-3">Update changes</button>
            <form action="/user/<%= obj._id %>?_method=DELETE" method="POST" style="display: inline;">
              <button type="submit" class="btn btn-danger">Delete Customer</button>
            </form>
